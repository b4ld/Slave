{
  "name": "daemon-rest",
  "version": "1.0.0",
  "description": "Daemon restful api",
  "main": "dist/index.ts",
  "scripts": {
    "start": "./node_modules/nodemon/bin/nodemon.js -e ts  --exec \"yarn run compile\"",
    "compile": "tsc && node ./dist/src/index.js"
  },
  "keywords": [
    "daemon",
    "mc-daemon"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/hapi": "^18.0.1",
    "@types/node": "^11.13.6",
    "boom": "^7.3.0",
    "dotenv": "^6.2.0",
    "hapi": "^18.1.0",
    "hapi-swagger": "^9.4.2",
    "hapijs-status-monitor": "^0.6.0",
    "nodemon": "^1.18.11",
    "prettier": "^1.17.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
